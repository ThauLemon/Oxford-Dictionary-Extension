{
  "manifest_version": 3,
  "name": "Oxford Quick Dictionary",
  "version": "1.0",
  "description": "Tra từ nhanh sử dụng Oxford Learner's Dictionaries API",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tra từ điển"
  },
  "background": {
    "service_worker": "background.js" 
  },
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://od-api.oxforddictionaries.com/*"
  ]
}